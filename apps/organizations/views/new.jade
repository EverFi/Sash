form(action='/organizations', method='post')
  label
    | Organization Name
    input(type='text', name='org[name]')

  label
    | Origin (URL)
    input(type='text', name='org[origin]')

  label
    | Organization Full Name
    input(type='text', name='org[org]')

  label
    | Contact email
    input(type='text', name='org[contact]')

  label
    | Password
    input(type='password', name='org[password]')

  label
    | Salt (for use salting user's username/passwords)
    input(type='text', name='org[salt]')

  input(type='submit', value='Create')
