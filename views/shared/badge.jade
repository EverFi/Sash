div.media.badge-media
  a.pull-left(href=urlFor(badge, 'badges'))
    img.media-object.badge-media-image(src="#{badge.imageUrl}")
  div.media-body
    h2.media-heading 
      a(href=urlFor(badge, 'badges')) #{badge.name}
    if badge.issued_count
      span #{badge.issued_count} issued
    else
      span 0 issued
    br
    span Created on #{formatDate(badge.create_at)}
